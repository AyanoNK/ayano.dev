---
import Footer from "../modules/Footer.astro";
import Header from "../modules/Header.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <meta
      name="description"
      content="Sebastian Correa - Full Stack Software Engineer with 5+ years of experience."
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Sebastian Correa</title>
    <script>
      import { webVitals } from "../lib/vitals";

      let analyticsId = import.meta.env.PUBLIC_VERCEL_ANALYTICS_ID;

      if (analyticsId) {
        webVitals({
          path: location.pathname,
          params: location.search,
          analyticsId,
        });
      }
    </script>
    <script>
      const switchTheme = document.querySelector("[data-switch-theme]");
      const html = document.querySelector("html");

      if (
        window.matchMedia &&
        window.matchMedia("(prefers-color-scheme: dark)").matches
      ) {
        html.classList.add("dark");
      }

      // TODO: remove, debug
      document.addEventListener("keydown", (event) => {
        if (event.key === "t") html.classList.toggle("dark");
      });

      switchTheme.addEventListener("click", () => {
        html.classList.toggle("dark");
      });
    </script>
  </head>
  <body
    class="m-0 bg-white bg-[linear-gradient(to_right,#80808033_1px,transparent_1px),linear-gradient(to_bottom,#80808033_1px,transparent_1px)] bg-[size:5rem_5rem] font-sans dark:bg-black">
    <Header />
    <button data-switch-theme>Switch themes between dark and white mode</button>
    <slot />
    <Footer />
    <SpeedInsights />
  </body>
</html>
